<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adu"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/penghargaan"
        android:layout_width="137dp"
        android:layout_height="97.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/peghargaan"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/adu"
        android:layout_width="137dp"
        android:layout_height="97.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/adu"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/belajar"
        android:layout_width="137dp"
        android:layout_height="97.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/penghargaan"
        app:layout_constraintStart_toEndOf="@+id/adu"
        android:text="@string/belajar"
        android:textSize="15sp"/>

    <ProgressBar
        android:id="@+id/experienceBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="80"
        app:layout_constraintBottom_toBottomOf="@+id/profil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profil"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="411dp"
        android:layout_height="66dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="58dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toBottomOf="@+id/profil"
        app:layout_constraintEnd_toStartOf="@+id/experienceBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gambarProfil"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/tombolCari"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/tombol_adu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/profil"
        android:text="@string/cari"
        android:textSize="40sp"/>

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profil"
        android:layout_marginTop="68dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/history"
        android:layout_marginLeft="30dp" />

    //Teman Pertama

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Teman"
        android:textSize="24sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/penandaSatu"
        app:layout_constraintTop_toTopOf="@id/temanSatu"
        app:layout_constraintBottom_toBottomOf="@id/temanSatu"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/temanSatu"
        app:layout_constraintTop_toTopOf="@id/temanSatu"
        app:layout_constraintBottom_toBottomOf="@id/temanSatu"
        android:text="2910"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/temanSatu"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tombolCari" />

    <ImageView
        android:id="@+id/penandaSatu"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/penanda_on"
        app:layout_constraintStart_toStartOf="@id/temanSatu"
        app:layout_constraintTop_toTopOf="@id/temanSatu"
        app:layout_constraintBottom_toBottomOf="@id/temanSatu"
        tools:ignore="ContentDescription" />

    //Teman Kedua

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Teman"
        android:textSize="24sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/penandaDua"
        app:layout_constraintTop_toTopOf="@id/temanDua"
        app:layout_constraintBottom_toBottomOf="@id/temanDua"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/temanDua"
        app:layout_constraintTop_toTopOf="@id/temanDua"
        app:layout_constraintBottom_toBottomOf="@id/temanDua"
        android:text="1560"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/temanDua"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/temanSatu" />

    <ImageView
        android:id="@+id/penandaDua"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/penanda_off"
        app:layout_constraintStart_toStartOf="@id/temanDua"
        app:layout_constraintTop_toTopOf="@id/temanDua"
        app:layout_constraintBottom_toBottomOf="@id/temanDua"
        tools:ignore="ContentDescription" />



</androidx.constraintlayout.widget.ConstraintLayout>
